---
import "../styles/global.css";
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="skncana's digital hub" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body
    class="mx-auto grid min-h-dvh max-w-3xl grid-rows-[auto_1fr_auto] gap-8 bg-stone-100 bg-(image:--circuit-board) p-4"
  >
    <Header />
    <div class="grid gap-4">
      <slot />
    </div>
    <footer>
      <p class="text-center text-xs">Made simple.</p>
    </footer>
  </body>
</html>
