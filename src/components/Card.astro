---
interface Props {
  username: string;
  external?: string;
  delay: number;
}

const { username, external, delay } = Astro.props;

import External from "../svg/link-external-01-svgrepo-com.svg";
import Copy from "../svg/copy-03-svgrepo-com.svg";
---

<li>
  <a
    href={external ? external : "#"}
    target={external ? "_blank" : "_self"}
    onclick={external ? "" : `navigator.clipboard.writeText('${username}')`}
  >
    <div
      class="relative flex animate-[fade_both_1s] items-center gap-4 rounded-lg border border-white p-4 shadow-md backdrop-blur-[3px] transition duration-300 hover:z-10 hover:scale-105 hover:shadow-lg hover:backdrop-blur-xs"
      style=`animation-delay: ${delay + 's'};`
    >
      <slot name="before" />
      <div class="flex-1">
        <p class="font-medium">{username}</p>
      </div>
      {
        external ? (
          <External slot="after" width={24} height={24} />
        ) : (
          <Copy slot="after" width={24} height={24} />
        )
      }
    </div>
  </a>
</li>
